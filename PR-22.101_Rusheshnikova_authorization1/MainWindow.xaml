<Window x:Class="PR_22._101_Rusheshnikova_authorization1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR_22._101_Rusheshnikova_authorization1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Логин:"/>
            <TextBox x:Name="LoginTextBox" Width="200"/>
            <Label Content="Пароль:"/>
            <TextBox x:Name="PasswordTextBox" Width="200"/>
            <Button Content="Войти" Click="LoginButton_Click" Margin="0,10,0,0" />
            <Label x:Name="MessageLabel" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
